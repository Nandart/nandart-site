import * as THREE from 'three';

let scene, camera, renderer;
let circle, obraGroup;

function init() {
  // Configuração da cena
  scene = new THREE.Scene();
  scene.background = new THREE.Color(0x1c1c1c); // Cor de fundo da galeria (cinza escuro)

  // Câmera
  camera = new THREE.PerspectiveCamera(75, window.innerWidth / window.innerHeight, 0.1, 1000);
  camera.position.z = 5;

  // Renderizador
  renderer = new THREE.WebGLRenderer();
  renderer.setSize(window.innerWidth, window.innerHeight);
  document.body.appendChild(renderer.domElement);

  // Iluminação
  const light = new THREE.AmbientLight(0x404040, 2); // Luz ambiente suave
  scene.add(light);

  const pointLight = new THREE.PointLight(0xffffff, 1, 100);
  pointLight.position.set(5, 5, 5);
  scene.add(pointLight);

  // Chão da galeria
  const floorGeometry = new THREE.PlaneGeometry(100, 100);
  const floorMaterial = new THREE.MeshBasicMaterial({ color: 0x222222, side: THREE.DoubleSide });
  const floor = new THREE.Mesh(floorGeometry, floorMaterial);
  floor.rotation.x = Math.PI / -2;
  scene.add(floor);

  // Configurar a rotação das obras
  obraGroup = new THREE.Group();
  scene.add(obraGroup);

  // Adicionar algumas obras de arte (como cubos, por enquanto)
  addArtwork();

  // Função de animação
  animate();
}

function addArtwork() {
  // Exemplo de obra suspensa (substitua por suas imagens ou modelos 3D)
  const geometry = new THREE.BoxGeometry(1, 1, 1);
  const material = new THREE.MeshBasicMaterial({ color: 0x00ff00 });
  const obra = new THREE.Mesh(geometry, material);

  obra.position.set(3, 0, 0);
  obraGroup.add(obra);

  // Adicionar mais obras ou ajustar conforme necessário
}

function animate() {
  requestAnimationFrame(animate);

  // Rotação suave das obras
  obraGroup.rotation.y += 0.01;

  renderer.render(scene, camera);
}

window.addEventListener('resize', () => {
  renderer.setSize(window.innerWidth, window.innerHeight);
  camera.aspect = window.innerWidth / window.innerHeight;
  camera.updateProjectionMatrix();
});

// Inicializar a cena
init();
